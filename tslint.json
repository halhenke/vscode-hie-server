{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "indent": [true, "spaces", 2],
        "no-namespace": false,
        "no-console": [true, "log"],
        "no-unused-variable": true,
        "promise-function-async": true,
        "quotemark": [true, "single", "avoid-template"],
        "trailing-comma": [true, {
            "multiline": {
                "objects": "always",
                "arrays": "always"
            }
        }],
        "ordered-imports": true
    },
    "rulesDirectory": []
}
